---
import Header from "../components/header/Header.astro";
import "../style/index.css";
import Main from "../components/main/main.astro";
import Footer from "../components/footer/Footer.astro";

// --- TU LÓGICA DE DATOS ---
const username = "NievesPerez-Data"; 
const response = await fetch(`https://api.github.com/users/${username}/repos?sort=updated`);
const allRepos = await response.json();
const projects = allRepos.filter(repo => !repo.fork && repo.description).slice(0, 6);
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    
    <meta name="description" content="Nieves Pérez - Data Analyst especializada en Business Intelligence y Estrategia Operativa." />
    <meta property="og:title" content="Nieves Pérez | Data Portfolio" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://NievesPerez-Data.github.io/" />

    <script src="https://kit.fontawesome.com/2898a0ac51.js" crossorigin="anonymous"></script>
    <title>Nieves Pérez | Data Portfolio</title>
  </head>
  <body>
    <Header />
    
    <main>
      <Main /> 
    </main>
    
    <Footer />

    <style is:global>
      :root {
        color-scheme: dark; /* Indica al navegador que la web es oscura */
      }

      html {
        scroll-behavior: smooth; /* Desplazamiento suave */
        /* IMPORTANTE: Deja 100px libres arriba para que el Header no tape el título */
        scroll-padding-top: 100px; 
        background-color: #000000;
      }

      body {
        margin: 0;
        padding: 0;
        background-color: #000000;
        color: #ffffff;
        font-family: system-ui, -apple-system, sans-serif;
      }

      /* Estilo para la scrollbar que querías limpiar */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #000;
      }
      ::-webkit-scrollbar-thumb {
        background: #094035;
        border-radius: 10px;
      }
    </style>
  </body>
</html>
