<style>
  .footer-glass {
    position: relative;
    width: 100%;
    padding: 60px 5%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-top: 1px solid rgba(9, 64, 53, 0.2);
    display: flex;
    justify-content: center;
    margin-top: 50px;
  }

  .footer-content {
    max-width: 1200px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  .role-text {
