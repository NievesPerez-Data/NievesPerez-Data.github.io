  .footer-social-links {
    display: flex;
    gap: 40px;
  }

  .footer-social-links a {
    color: #a0aec0;
    font-size: 1.5rem;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .footer-social-links a:hover {
    color: #ffffff;
    transform: translateY(-5px);
    text-shadow: 0 0 15px rgba(9, 64, 53, 0.8);
  }

  .footer-copyright {
    font-size: 0.75rem;
    color: #4a5568;
    letter-spacing: 1px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-social-links {
      gap: 25px;
    }
  }
</style>
