<style>
  /* Colores de tu paleta */
  :root {
    --deep-emerald: #094035;
    --near-black: #02100d;
  }

  .footer-custom {
    width: 100%;
    background-color: #000000;
    padding: 80px 20px;
    display: flex;
    justify-content: center;
    border-top: 1px solid var(--deep-emerald);
  }

  .footer-container {
    max-width: 1200px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer-role {
    color: #ffffff;
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: 6px;
    text-transform: uppercase;
    margin: 0;
  }

  .footer-sub {
    color: var(--deep-emerald);
    font-size: 1rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin: 10px 0 40px 0;
  }

  .footer-socials {
    display: flex;
    gap: 60px; /* El espaciado que pediste */
    margin-bottom: 40px;
  }

  .footer-socials a {
    color: #f6f6f9;
    font-size: 2rem;
    transition: 0.3s ease;
    text-decoration: none;
  }

  .footer-socials a:hover {
    color: var(--deep-emerald);
    transform: translateY(-5px);
  }

  .footer-copy {
    color: #444;
    font-size: 0.9rem;
    letter-spacing: 4px;
    border-top: 1px solid #111;
    padding-top: 20px;
    width: 100%;
    max-width: 300px;
  }

  /* Ajuste para m√≥viles */
  @media (max-width: 768px) {
    .footer-role { font-size: 1.8rem; }
    .footer-socials { gap: 30px; }
  }
</style>
