---
const tech = ["Python (Pandas, NumPy)", "SQL (MySQL)", "Tableau", "Power BI", "Git", "Web Scraping"];
const biz = ["KPIs de Rendimiento", "Metodologías Ágiles", "Estrategia de Ventas", "Gestión de RRHH"];
---
<section class="skills" id="skills">
  <h2 class="title">Habilidades</h2>
  <div class="container">
    <div class="col">
      <h3>Technology & Data</h3>
      <ul>{tech.map(s => <li>{s}</li>)}</ul>
    </div>
    <div class="col">
      <h3>Business & Ops</h3>
      <ul>{biz.map(s => <li>{s}</li>)}</ul>
    </div>
  </div>
</section>

<style>
  .skills { padding: 60px 0; max-width: 1000px; margin: 0 auto; }
  .title { color: #01be96; margin-bottom: 30px; font-size: 2rem; }
  .container { display: grid; grid-template-columns: 1fr 1fr; gap: 40px; }
  h3 { color: #fff; margin-bottom: 15px; }
  ul { list-style: none; color: #888; }
  li { margin-bottom: 8px; }
  li::before { content: "▹ "; color: #01be96; }
</style>
