---
// Traemos los proyectos que definiste en el index.astro a través de "props"
const { projects = [] } = Astro.props;
---

<section class="section-container" id="proyectos">
  <h2 class="section-title">Proyectos</h2>
  <div class="projects-grid">
    {projects.length > 0 ? (
      projects.map((repo) => (
        <a href={repo.html_url} target="_blank" class="project-card">
          <div class="project-content">
            <div class="project-header">
              <i class="fa-regular fa-folder"></i>
              <div class="project-links">
                <i class="fa-brands fa-github"></i>
              </div>
            </div>
            <h3 class="project-name">{repo.name}</h3>
            <p class="project-desc">
              {repo.description || "Proyecto de análisis de datos centrado en la optimización y visualización estratégica."}
            </p>
            <div class="project-footer">
              <span class="project-tech">{repo.language || "Data Science"}</span>
            </div>
          </div>
        </a>
      ))
    ) : (
      <p>Cargando repositorios...</p>
    )}
  </div>
</section>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }

  .project-card {
    background: #111;
    border: 1px solid rgba(17, 212, 173, 0.1);
    border-radius: 8px;
    padding: 25px;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: #11d4ad;
    background: linear-gradient(145deg, #111 0%, rgba(9, 64, 53, 0.2) 100%);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #11d4ad;
    font-size: 1.5rem;
    margin-bottom: 20px;
  }

  .project-name {
    color: #fff;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 12px;
  }

  .project-desc {
    color: #a0aec0;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .project-footer {
    font-size: 0.75rem;
    color: #11d4ad;
    font-family: monospace;
    font-weight: 600;
    text-transform: uppercase;
  }
</style>
