---
const { projects = [] } = Astro.props;
// Importante: Solo importa About si el archivo existe en esa ruta exacta
import About from "./About.astro"; 
---

<main>
  <div class="container_p">
    
    <section class="hero-section" id="inicio">
      <div class="hero-content">
        <div class="hero-text">
          <span class="name-highlight">Nieves Pérez Alonso</span>
          <h1 class="hero-title">DATA ANALYST & <br/>BI STRATEGIST</h1>
          <p class="hero-description">Transformando datos en decisiones estratégicas con Business Intelligence.</p>
          <div class="hero-btns">
            <a href="mailto:mnieves.perez.alonso@gmail.com" class="btn-primary">Hablemos</a>
          </div>
        </div>
        <div class="hero-image">
          <div class="image-circle"><img src="/img/tu-foto.webp" alt="Nieves" /></div>
        </div>
      </div>
    </section>

    <section class="section-container" id="proyectos">
      <h2 class="section-title">Proyectos</h2>
      <div class="projects-grid">
        {projects.map((repo) => (
          <a href={repo.html_url} class="project-card">
            <h3 class="project-name">{repo.name}</h3>
            <p class="project-desc">{repo.description}</p>
          </a>
        ))}
      </div>
    </section>

    <section class="section-container" id="skills">
      <h2 class="section-title">Habilidades</h2>
      <div class="skills-grid">
         <div class="skill-item"><i class="fa-solid fa-database"></i><span>SQL</span></div>
         <div class="skill-item"><i class="fa-brands fa-python"></i><span>Python</span></div>
      </div>
    </section>

    <div id="sobremi">
      <About />
    </div>

  </div>
</main>

<style>
  .container_p {
    display: flex;
    flex-direction: column;
    gap: 40px; /* Esto mantiene el espacio entre secciones del creador */
  }
  /* Aquí van los estilos que te pasé en el mensaje anterior para que se vea esmeralda */
  .hero-section { min-height: 80vh; display: flex; align-items: center; justify-content: center; }
  .name-highlight { color: #11d4ad; font-weight: bold; }
  .image-circle { width: 300px; height: 300px; border-radius: 50%; overflow: hidden; border: 2px solid #11d4ad; }
  .section-container { padding: 40px 10%; }
  .section-title { font-size: 2rem; border-bottom: 2px solid #11d4ad; display: inline-block; margin-bottom: 20px; }
  .projects-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; }
  .project-card { background: #111; padding: 20px; border-radius: 8px; border: 1px solid #222; text-decoration: none; color: white; }
  .project-card:hover { border-color: #11d4ad; }
</style>
