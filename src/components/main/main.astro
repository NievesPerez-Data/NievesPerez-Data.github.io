---
const { projects = [] } = Astro.props;
---

<main>
  <div class="container_p">
    
    <section class="hero-section" id="inicio">
      <div class="hero-content">
        <div class="hero-text">
          <span class="name-highlight">Nieves Pérez Alonso</span>
          <h1 class="hero-title">DATA ANALYST & <br/>BI STRATEGIST</h1>
          <p class="hero-description">
            Transformando datos complejos en decisiones estratégicas mediante 
            Business Intelligence, optimización de procesos y visualización avanzada.
          </p>
          
          <div class="hero-btns">
            <a href="mailto:mnieves.perez.alonso@gmail.com" class="btn-primary">Hablemos</a>
            <a href="#" class="btn-secondary">Ver Currículum</a>
          </div>

          <div class="hero-social">
            <span>Echa un vistazo a mi</span>
            <div class="social-icons">
              <a href="https://github.com/NievesPerez-Data" target="_blank"><i class="fa-brands fa-github"></i></a>
              <a href="https://linkedin.com/in/nievesperezalonso" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
            </div>
          </div>
        </div>

        <div class="hero-image">
          <div class="image-circle">
            <img src="/img/tu-foto.webp" alt="Nieves Pérez Alonso" />
          </div>
        </div>
      </div>
    </section>

    <section class="section-container" id="proyectos">
      <h2 class="section-title">Proyectos</h2>
      <div class="projects-grid">
        {projects.map((repo) => (
          <a href={repo.html_url} target="_blank" class="project-card">
            <div class="project-header">
              <i class="fa-regular fa-folder"></i>
              <i class="fa-brands fa-github"></i>
            </div>
            <h3 class="project-name">{repo.name}</h3>
            <p class="project-desc">{repo.description || "Análisis estratégico de datos."}</p>
            <div class="project-footer">
              <span class="project-tech">{repo.language || "SQL / Python"}</span>
            </div>
          </a>
        ))}
      </div>
    </section>

    <section class="section-container" id="habilidades">
      <h2 class="section-title">Habilidades</h2>
      <div class="skills-grid">
        <div class="skill-item"><i class="fa-solid fa-chart-column" style="color: #11d4ad;"></i><span>Tableau</span></div>
        <div class="skill-item"><i class="fa-solid fa-database" style="color: #336791;"></i><span>SQL</span></div>
        <div class="skill-item"><i class="fa-brands fa-python" style="color: #3776AB;"></i><span>Python</span></div>
        <div class="skill-item"><i class="fa-solid fa-file-excel" style="color: #1D6F42;"></i><span>Excel</span></div>
        <div class="skill-item"><i class="fa-brands fa-git-alt" style="color: #F05032;"></i><span>Git</span></div>
      </div>
    </section>

    <section class="section-container" id="estudios">
      <h2 class="section-title">Estudios</h2>
      <div class="timeline">
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <h3>Especialización en Big Data & Analytics</h3>
          <p class="timeline-school">Institución Académica</p>
          <span class="timeline-date">2024 - Actualidad</span>
        </div>
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <h3>Grado en [Tu Carrera]</h3>
          <p class="timeline-school">Universidad</p>
          <span class="timeline-date">2019 - 2023</span>
        </div>
      </div>
    </section>
