---
const { projects = [] } = Astro.props;
---

<main class="main-root">
  <div class="content-wrapper">
    
    <section class="hero" id="inicio">
      <div class="hero-text">
        <span class="highlight">Nieves Pérez Alonso</span>
        <h1>DATA ANALYST & <br/> BI STRATEGIST</h1>
        <p>Transformando datos complejos en decisiones estratégicas mediante Business Intelligence.</p>
        <div class="hero-btns">
          <a href="mailto:mnieves.perez.alonso@gmail.com" class="btn-primary">Hablemos</a>
        </div>
      </div>
      <div class="hero-image">
        <div class="image-circle">
          <img src="/img/tu-foto.webp" alt="Nieves" />
        </div>
      </div>
    </section>

    <section class="section" id="proyectos">
      <h2 class="title">Proyectos</h2>
      <div class="projects-grid">
        {projects.map((repo) => (
          <div class="project-card">
            <div class="card-icons">
              <i class="fa-regular fa-folder"></i>
              <a href={repo.html_url} target="_blank"><i class="fa-brands fa-github"></i></a>
            </div>
            <h3>{repo.name}</h3>
            <p>{repo.description || "Análisis estratégico y BI."}</p>
            <div class="capsules">
              <span class="pill">{repo.language || "Data Science"}</span>
              <span class="pill">SQL</span>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="section" id="habilidades">
      <h2 class="title">Habilidades</h2>
      <div class="skills-grid">
        <div class="skill"><img src="https://www.vectorlogo.zone/logos/tableau/tableau-icon.svg" /><span>Tableau</span></div>
        <div class="skill"><img src="https://raw.githubusercontent.com/devicons/devicon/master/icons/python/python-original.svg" /><span>Python</span></div>
        <div class="skill"><img src="https://raw.githubusercontent.com/devicons/devicon/master/icons/mysql/mysql-original.svg" /><span>SQL</span></div>
        <div class="skill"><img src="https://raw.githubusercontent.com/devicons/devicon/master/icons/pandas/pandas-original.svg" /><span>Pandas</span></div>
      </div>
    </section>

  </div>
</main>

<style>
  .main-root { background-color: #000 !important; padding-top: 100px; color: #fff; }
  .content-wrapper { max-width: 1200px; margin: 0 auto; padding: 0 5%; }
  
  .hero { display: flex; align-items: center; justify-content: space-between; min-height: 60vh; }
  .highlight { color: #11d4ad; font-weight: bold; font-size: 1.2rem; }
  h1 { font-size: clamp(2.5rem, 5vw, 4rem); margin: 20px 0; color: #fff; }
  .btn-primary { background: #11d4ad; color: #000; padding: 12px 25px; border-radius: 5px; text-decoration: none; font-weight: bold; }
  
  .image-circle {
    width: 350px; height: 350px; border-radius: 50%;
    background: radial-gradient(circle, rgba(17, 212, 173, 0.2) 0%, transparent 70%);
    display: flex; align-items: center; justify-content: center;
    border: 2px solid #11d4ad;
  }
  .image-circle img { width: 85%; height: 85%; border-radius: 50%; object-fit: cover; }

  .section { padding: 100px 0; }
  .title { font-size: 2.2rem; margin-bottom: 40px; color: #fff; }

  .projects-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; }
  .project-card { background: #0a0a0a; border: 1px solid #222; padding: 30px; border-radius: 12px; }
  .card-icons { display: flex; justify-content: space-between; color: #11d4ad; font-size: 1.5rem; margin-bottom: 20px; }
  .card-icons a { color: #11d4ad; }
  
  .capsules { display: flex; gap: 10px; margin-top: 20px; }
  .pill { background: rgba(17, 212, 173, 0.1); border: 1px solid rgba(17, 212, 173, 0.3); color: #11d4ad; padding: 5px 12px; border-radius: 15px; font-size: 0.8rem; }

  .skills-grid { display: flex; flex-wrap: wrap; gap: 40px; }
  .skill { display: flex; flex-direction: column; align-items: center; gap: 10px; }
  .skill img { width: 50px; }

  @media (max-width: 900px) {
    .hero { flex-direction: column; text-align: center; }
    .image-circle { width: 250px; height: 250px; margin-top: 30px; }
  }
</style>
