---
// Importamos los estilos si es necesario (la plantilla suele tenerlos aquí o en el componente)
import "./projects.css"; 

// Traemos tus datos de GitHub
const username = "NievesPerez-Data"; 
const response = await fetch(`https://api.github.com/users/${username}/repos?sort=updated`);
const allRepos = await response.json();
const projects = allRepos.filter(repo => !repo.fork && repo.description).slice(0, 6);
---

<section class="projects-section" id="proyectos">
  <h2 class="title-projects">Mis Proyectos de Datos</h2>
  <div class="container-projects">
    {projects.map((repo) => (
      <div class="card-project">
        <div class="info-project">
          <h3>{repo.name}</h3>
          <p>{repo.description}</p>
          <div class="tech-stack">
             {repo.language && <span>{repo.language}</span>}
          </div>
          <a href={repo.html_url} target="_blank" class="btn-project">
            Ver Código en GitHub <i class="fa-brands fa-github"></i>
          </a>
        </div>
      </div>
    ))}
  </div>
</section>
