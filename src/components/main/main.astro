---
import About from "./about.astro"; // Asegúrate de que la ruta sea ./about.astro si está en la misma carpeta
const { projects = [] } = Astro.props;
---

<main class="main-container">
  <section class="hero-section" id="inicio">
    <div class="hero-content">
      <div class="hero-text">
        <span class="name-highlight">Nieves Pérez Alonso</span>
        <h1 class="hero-title">DATA ANALYST & <br/>BI STRATEGIST</h1>
        <p class="hero-description">
          Especializada en transformar datos complejos en decisiones estratégicas. 
          Experta en Business Intelligence, optimización de operaciones y visualización avanzada.
        </p>
        
        <div class="hero-btns">
          <a href="mailto:mnieves.perez.alonso@gmail.com" class="btn-primary">Hablemos</a>
          <a href="#" class="btn-secondary">Ver Currículum</a>
        </div>

        <div class="hero-social">
          <span>Echa un vistazo a mi</span>
          <div class="social-icons">
            <a href="https://github.com/NievesPerez-Data" target="_blank"><i class="fa-brands fa-github"></i></a>
            <a href="https://linkedin.com/in/nievesperezalonso" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
          </div>
        </div>
      </div>

      <div class="hero-image">
        <div class="image-circle">
          <img src="/img/tu-foto.webp" alt="Nieves Pérez Alonso" />
        </div>
      </div>
    </div>
  </section>

  <section class="section-container" id="proyectos">
    <h2 class="section-title">Proyectos</h2>
    <div class="projects-grid">
      {projects.map((repo) => (
        <a href={repo.html_url} target="_blank" class="project-card">
          <div class="project-content">
            <div class="project-header">
              <i class="fa-regular fa-folder"></i>
              <i class="fa-brands fa-github"></i>
            </div>
            <h3 class="project-name">{repo.name}</h3>
            <p class="project-desc">{repo.description}</p>
            <div class="project-footer">
              <span class="project-tech">{repo.language || "Data Science"}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>

  <section class="section-container" id="skills">
    <h2 class="section-title">Habilidades</h2>
    <div class="skills-grid">
      <div class="skill-item"><i class="fa-solid fa-chart-column" style="color: #11d4ad;"></i><span>Tableau</span></div>
      <div class="skill-item"><i class="fa-solid fa-database" style="color: #336791;"></i><span>SQL</span></div>
      <div class="skill-item"><i class="fa-brands fa-python" style="color: #3776AB;"></i><span>Python</span></div>
      <div class="skill-item"><i class="fa-solid fa-file-excel" style="color: #1D6F42;"></i><span>Excel</span></div>
      <div class="skill-item"><i class="fa-brands fa-git-alt" style="color: #F05032;"></i><span>Git</span></div>
    </div>
  </section>

  <section class="section-container" id="estudios">
    <h2 class="section-title">Estudios</h2>
    <div class="timeline">
      <div class="timeline-item">
        <div class="timeline-dot"></div>
        <h3>Especialización en Big Data</h3>
        <p>Institución Académica</p>
        <span class="timeline-date">2023 - 2024</span>
      </div>
    </div>
  </section>

  <About />
</main>

<style>
  .main-container { background-color: #000; }
  .section-container { padding: 60px 8%; max-width: 1200px; margin: 0 auto; }
  .section-title { font-size: 2rem; font-weight: 800; color: #fff; margin-bottom: 40px; text-transform: uppercase; }

  /* HERO */
  .hero-section { min-height: 90vh; display: flex; align-items: center; padding: 100px 8% 40px 8%; background: radial-gradient(circle at 80% 50%, rgba(17, 212, 173, 0.1) 0%, transparent 60%); }
  .hero-content { display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 40px; align-items: center; width: 100%; }
  .name-highlight { color: #11d4ad; font-size: 1.5rem; font-weight: 600; }
  .hero-title { font-size: 3.5rem; font-weight: 800; line-height: 1.1; margin: 10px 0 20px 0; }
  .hero-description { color: #a0aec0; line-height: 1.6; margin-bottom: 30px; max-width: 500px; }
  .hero-btns { display: flex; gap: 15px; margin-bottom: 30px; }
  .btn-primary { background: #11d4ad; color: #000; padding: 12px 25px; border-radius: 4px; font-weight: 700; text-decoration: none; }
  .btn-secondary { border: 1px solid #ffffff44; color: #fff; padding: 12px 25px; border-radius: 4px; text-decoration: none; }
  .social-icons { display: flex; gap: 10px; margin-top: 10px; }
  .social-icons a { color: #fff; font-size: 1.3rem; background: rgba(17, 212, 173, 0.1); width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; border-radius: 4px; }
  .image-circle { width: 380px; height: 380px; border-radius: 50%; background: #094035; overflow: hidden; border: 2px solid rgba(17, 212, 173, 0.2); }
  .image-circle img { width: 100%; height: 100%; object-fit: cover; }

  /* PROJECTS GRID */
  .projects-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px; }
  .project-card { background: #0a0a0a; border: 1px solid #333; padding: 25px; border-radius: 8px; text-decoration: none; transition: 0.3s; }
  .project-card:hover { border-color: #11d4ad; transform: translateY(-5px); }
  .project-header { display: flex; justify-content: space-between; color: #11d4ad; font-size: 1.4rem; margin-bottom: 15px; }
  .project-name { color: #fff; margin: 0 0 10px 0; font-size: 1.2rem; }
  .project-desc { color: #888; font-size: 0.9rem; line-height: 1.4; }
  .project-footer { margin-top: 20px; color: #11d4ad; font-size: 0.8rem; font-weight: 700; }

  /* SKILLS */
  .skills-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(110px, 1fr)); gap: 30px; text-align: center; }
  .skill-item i { font-size: 2.5rem; display: block; margin-bottom: 10px; }
  .skill-item span { color: #888; font-size: 0.9rem; }

  /* TIMELINE */
  .timeline { border-left: 2px solid #094035; padding-left: 20px; }
  .timeline-item { position: relative; padding-bottom: 30px; }
  .timeline-dot { position: absolute; left: -27px; top: 5px; width: 12px; height: 12px; background: #11d4ad; border-radius: 50%; }
  .timeline-date { color: #11d4ad; font-size: 0.85rem; font-weight: 700; }

  @media (max-width: 900px) {
    .hero-content { grid-template-columns: 1fr; text-align: center; }
    .hero-btns { justify-content: center; }
    .image-circle { width: 280px; height: 280px; margin: 0 auto; order: -1; }
  }
</style>
