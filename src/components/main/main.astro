---
import About from "./about.astro"; 
const { projects = [] } = Astro.props;
---

<main class="main-container">
  <section class="hero-section" id="inicio">
    <div class="hero-content">
      <div class="hero-text">
        <span class="name-highlight">Nieves Pérez Alonso</span>
        <h1 class="hero-title">DATA ANALYST & <br/>BI STRATEGIST</h1>
        <p class="hero-description">
          Transformando datos complejos en decisiones estratégicas. Especialista en 
          Business Intelligence, optimización operativa y visualización de datos.
        </p>
        
        <div class="hero-btns">
          <a href="mailto:mnieves.perez.alonso@gmail.com" class="btn-primary">Hablemos</a>
          <a href="#" class="btn-secondary">Currículum</a>
        </div>

        <div class="hero-social">
          <p>Echa un vistazo a mi</p>
          <div class="social-icons">
            <a href="https://github.com/NievesPerez-Data" target="_blank"><i class="fa-brands fa-github"></i></a>
            <a href="https://linkedin.com/in/nievesperezalonso" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
          </div>
        </div>
      </div>

      <div class="hero-image">
        <div class="image-circle">
          <img src="/img/tu-foto.webp" alt="Nieves Pérez Alonso" />
        </div>
      </div>
    </div>
  </section>

  <section class="section-container" id="proyectos">
    <h2 class="section-title">Proyectos</h2>
    <div class="projects-grid">
      {projects.map((repo) => (
        <a href={repo.html_url} target="_blank" class="project-card">
          <div class="project-header">
            <i class="fa-regular fa-folder"></i>
            <i class="fa-brands fa-github"></i>
          </div>
          <h3 class="project-name">{repo.name}</h3>
          <p class="project-desc">{repo.description}</p>
          <div class="project-footer">
            <span class="tech-tag">{repo.language || "Data Analysis"}</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <section class="section-container" id="skills">
    <h2 class="section-title">Habilidades</h2>
    <div class="skills-grid">
      <div class="skill-item"><i class="fa-solid fa-chart-column" style="color: #11d4ad;"></i><span>Tableau</span></div>
      <div class="skill-item"><i class="fa-solid fa-database" style="color: #336791;"></i><span>SQL</span></div>
      <div class="skill-item"><i class="fa-brands fa-python" style="color: #3776AB;"></i><span>Python</span></div>
      <div class="skill-item"><i class="fa-solid fa-file-excel" style="color: #1D6F42;"></i><span>Excel</span></div>
    </div>
  </section>

  <About />
</main>

<style>
  .main-container { background-color: #000; }
  .section-container { padding: 80px 8%; max-width: 1300px; margin: 0 auto; }
  .section-title { font-size: 2.2rem; font-weight: 800; color: #fff; margin-bottom: 40px; }

  /* HERO STYLES */
  .hero-section { min-height: 90vh; display: flex; align-items: center; padding: 100px 8% 50px 8%; background: radial-gradient(circle at 80% 50%, rgba(17, 212, 173, 0.1) 0%, transparent 60%); }
  .hero-content { display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 50px; align-items: center; width: 100%; }
  .name-highlight { color: #11d4ad; font-size: 1.5rem; font-weight: 600; display: block; margin-bottom: 10px; }
  .hero-title { font-size: 3.8rem; font-weight: 800; line-height: 1; margin: 0 0 20px 0; }
  .hero-description { color: #a0aec0; font-size: 1.1rem; line-height: 1.6; margin-bottom: 35px; max-width: 550px; }
  .hero-btns { display: flex; gap: 20px; margin-bottom: 35px; }
  .btn-primary { background: #11d4ad; color: #000; padding: 14px 30px; border-radius: 4px; font-weight: 700; text-decoration: none; transition: 0.3s; }
  .btn-primary:hover { background: #0ea88a; }
  .btn-secondary { border: 1px solid rgba(255,255,255,0.2); color: #fff; padding: 14px 30px; border-radius: 4px; text-decoration: none; transition: 0.3s; }
  .btn-secondary:hover { background: rgba(255,255,255,0.05); }
  .social-icons { display: flex; gap: 15px; margin-top: 10px; }
  .social-icons a { color: #fff; font-size: 1.4rem; background: rgba(17, 212, 173, 0.1); width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; border-radius: 6px; transition: 0.3s; }
  .social-icons a:hover { background: rgba(17, 212, 173, 0.2); color: #11d4ad; }
  .image-circle { width: 400px; height: 400px; border-radius: 50%; background: #051d19; overflow: hidden; border: 2px solid rgba(17, 212, 173, 0.2); box-shadow: 0 0 60px rgba(17, 212, 173, 0.1); }
  .image-circle img { width: 100%; height: 100%; object-fit: cover; }

  /* PROJECTS GRID */
  .projects-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 25px; }
  .project-card { background: #0a0a0a; border: 1px solid #222; padding: 30px; border-radius: 12px; text-decoration: none; transition: 0.3s; display: flex; flex-direction: column; }
  .project-card:hover { border-color: #11d4ad; transform: translateY(-8px); background: #0f0f0f; }
  .project-header { display: flex; justify-content: space-between; color: #11d4ad; font-size: 1.6rem; margin-bottom: 20px; }
  .project-name { color: #fff; margin: 0 0 12px 0; font-size: 1.3rem; }
  .project-desc { color: #718096; font-size: 0.95rem; line-height: 1.5; flex-grow: 1; }
  .project-footer { margin-top: 25px; color: #11d4ad; font-size: 0.85rem; font-weight: 700; font-family: monospace; }

  /* SKILLS GRID */
  .skills-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); gap: 30px; }
  .skill-item { text-align: center; }
  .skill-item i { font-size: 3rem; display: block; margin-bottom: 12px; }
  .skill-item span { color: #cbd5e1; font-size: 0.9rem; }

  @media (max-width: 1000px) {
    .hero-content { grid-template-columns: 1fr; text-align: center; }
    .hero-text { display: flex; flex-direction: column; align-items: center; }
    .hero-btns { justify-content: center; }
    .hero-title { font-size: 3rem; }
    .image-circle { width: 300px; height: 300px; order: -1; margin-bottom: 40px; }
  }
</style>
